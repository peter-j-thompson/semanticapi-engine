{
  "provider": "slack",
  "name": "Slack",
  "description": "Team communication and collaboration platform. Send messages, manage channels, and search workspace.",
  "base_url": "https://slack.com/api",
  "auth": {
    "type": "oauth2",
    "auth_url": "https://slack.com/oauth/v2/authorize",
    "token_url": "https://slack.com/api/oauth.v2.access",
    "scopes": [
      "chat:write",
      "chat:write.public",
      "channels:read",
      "channels:history",
      "users:read",
      "groups:read",
      "im:read"
    ],
    "client_id_env": "SLACK_CLIENT_ID",
    "client_secret_env": "SLACK_CLIENT_SECRET",
    "token_field": "access_token"
  },
  "capabilities": [
    {
      "id": "send_message",
      "name": "Send Message",
      "description": "Send a message to a Slack channel or direct message",
      "semantic_tags": [
        "message",
        "send",
        "post",
        "chat",
        "notify",
        "channel",
        "dm"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/chat.postMessage",
        "params": {
          "channel": {
            "type": "string",
            "required": true,
            "description": "Channel ID or name"
          },
          "text": {
            "type": "string",
            "required": true,
            "description": "Message text"
          },
          "blocks": {
            "type": "array",
            "required": false,
            "description": "Block Kit blocks for rich formatting"
          }
        }
      }
    },
    {
      "id": "list_channels",
      "name": "List Channels",
      "description": "Get a list of all public channels in the workspace",
      "semantic_tags": [
        "channels",
        "list",
        "workspace",
        "rooms"
      ],
      "endpoint": {
        "method": "GET",
        "path": "/conversations.list",
        "params": {
          "types": {
            "type": "string",
            "required": false,
            "description": "Channel types (public_channel, private_channel)"
          },
          "limit": {
            "type": "integer",
            "required": false,
            "description": "Maximum results to return"
          }
        }
      }
    },
    {
      "id": "get_channel_history",
      "name": "Get Channel History",
      "description": "Fetch message history from a channel",
      "semantic_tags": [
        "history",
        "messages",
        "chat",
        "conversation",
        "logs"
      ],
      "endpoint": {
        "method": "GET",
        "path": "/conversations.history",
        "params": {
          "channel": {
            "type": "string",
            "required": true,
            "description": "Channel ID"
          },
          "limit": {
            "type": "integer",
            "required": false,
            "description": "Number of messages to fetch"
          }
        }
      }
    },
    {
      "id": "list_users",
      "name": "List Users",
      "description": "Get a list of all users in the workspace",
      "semantic_tags": [
        "users",
        "members",
        "team",
        "people",
        "workspace"
      ],
      "endpoint": {
        "method": "GET",
        "path": "/users.list",
        "params": {
          "limit": {
            "type": "integer",
            "required": false,
            "description": "Maximum results"
          }
        }
      }
    },
    {
      "id": "get_user_info",
      "name": "Get User Info",
      "description": "Get information about a specific user",
      "semantic_tags": [
        "user",
        "profile",
        "info",
        "member"
      ],
      "endpoint": {
        "method": "GET",
        "path": "/users.info",
        "params": {
          "user": {
            "type": "string",
            "required": true,
            "description": "User ID"
          }
        }
      }
    },
    {
      "id": "search_messages",
      "name": "Search Messages",
      "description": "Search for messages across all channels",
      "semantic_tags": [
        "search",
        "find",
        "messages",
        "query"
      ],
      "endpoint": {
        "method": "GET",
        "path": "/search.messages",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "Search query"
          }
        }
      }
    },
    {
      "id": "set_status",
      "name": "Set User Status",
      "description": "Set your status emoji and text",
      "semantic_tags": [
        "status",
        "presence",
        "emoji",
        "available"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/users.profile.set",
        "params": {
          "profile": {
            "type": "object",
            "required": true,
            "description": "Profile object with status_text and status_emoji"
          }
        }
      }
    },
    {
      "id": "create_channel",
      "name": "Create Channel",
      "description": "Create a new public or private channel",
      "semantic_tags": [
        "create",
        "new",
        "channel",
        "room"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/conversations.create",
        "params": {
          "name": {
            "type": "string",
            "required": true,
            "description": "Channel name"
          },
          "is_private": {
            "type": "boolean",
            "required": false,
            "description": "Create as private channel"
          }
        }
      }
    }
  ],
  "response_transforms": {
    "send_message": {
      "success_field": "ok",
      "data_field": "message",
      "error_field": "error"
    },
    "list_channels": {
      "success_field": "ok",
      "data_field": "channels",
      "error_field": "error"
    },
    "get_channel_history": {
      "success_field": "ok",
      "data_field": "messages",
      "error_field": "error"
    },
    "list_users": {
      "success_field": "ok",
      "data_field": "members",
      "error_field": "error"
    }
  },
  "auth_setup_url": "https://api.slack.com/apps"
}