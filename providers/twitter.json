{
    "provider": "twitter",
    "name": "Twitter/X",
    "description": "Twitter (X) API for posting tweets, reading timelines, and user management",
    "base_url": "https://api.twitter.com/2",
    "auth": {
        "type": "bearer",
        "header": "Authorization",
        "prefix": "Bearer"
    },
    "capabilities": [
        {
            "id": "create_tweet",
            "name": "Create Tweet",
            "description": "Post a new tweet to the authenticated user's timeline",
            "semantic_tags": [
                "tweet",
                "post",
                "publish",
                "social",
                "share"
            ],
            "endpoint": {
                "method": "POST",
                "path": "/tweets",
                "params": {
                    "text": {
                        "type": "string",
                        "required": true,
                        "description": "Tweet text content"
                    }
                }
            }
        },
        {
            "id": "search",
            "name": "Search Tweets",
            "description": "Search for recent tweets matching a query",
            "semantic_tags": [
                "search",
                "tweets",
                "find",
                "query",
                "social"
            ],
            "endpoint": {
                "method": "GET",
                "path": "/tweets/search/recent",
                "params": {
                    "query": {
                        "type": "string",
                        "required": true,
                        "description": "Search query"
                    },
                    "max_results": {
                        "type": "integer",
                        "required": false,
                        "description": "10-100"
                    }
                }
            }
        },
        {
            "id": "get_user",
            "name": "Get User",
            "description": "Get profile information for a Twitter user by username",
            "semantic_tags": [
                "user",
                "profile",
                "info",
                "lookup",
                "account"
            ],
            "endpoint": {
                "method": "GET",
                "path": "/users/by/username/{username}",
                "params": {
                    "username": {
                        "type": "string",
                        "required": true,
                        "description": "Twitter username"
                    }
                }
            }
        },
        {
            "id": "get_timeline",
            "name": "Get Timeline",
            "description": "Get recent tweets from a user's timeline",
            "semantic_tags": [
                "timeline",
                "tweets",
                "feed",
                "user",
                "recent"
            ],
            "endpoint": {
                "method": "GET",
                "path": "/users/{userId}/tweets",
                "params": {
                    "userId": {
                        "type": "string",
                        "required": true,
                        "description": "User ID"
                    },
                    "max_results": {
                        "type": "integer",
                        "required": false,
                        "description": "Results limit"
                    }
                }
            }
        }
    ]
}