        "method": "POST",
        "path": "/",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL mutation for change_column_value"
          }
        }
      }
    },
    {
      "id": "get_me",
      "name": "Get Current User",
