        "create item",
        "new item",
        "add task",
        "new row"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL mutation for create_item"
          },
          "variables": {
            "type": "object",
