      "semantic_tags": [
        "me",
        "my account",
        "user info",
        "who am i"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL query: { me { id name email } }"
