    "type": "bearer",
    "header": "Authorization",
    "prefix": "Bearer"
  },
  "capabilities": [
    {
      "id": "list_boards",
      "name": "List Boards",
      "description": "List all boards in the workspace.",
      "semantic_tags": [
        "boards",
        "list boards",
        "projects",
        "workspaces"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL query for boards"
          }
        }
      }
    },
    {
      "id": "list_items",
      "name": "List Items",
      "description": "List items on a board.",
      "semantic_tags": [
        "items",
        "tasks",
        "rows",
        "board items"
      ],
      "endpoint": {
        "method": "POST",
        "path": "/",
        "params": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL query for items on a board"
          }
        }
      }
    },
    {
      "id": "create_item",
      "name": "Create Item",
